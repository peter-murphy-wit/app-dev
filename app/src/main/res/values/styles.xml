<resources>
    <!-- Base application theme. NoActionBar remove android default action bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">


        <!-- Primary app color scheme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.search" parent="AppTheme">

        <!-- Search text color -->
        <item name="android:editTextColor">@color/ColorWhite</item>
        <!-- Placeholder text color -->
        <item name="android:textColorHint">@color/ColorGray</item>

    </style>

</resources>